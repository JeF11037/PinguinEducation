<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PinguinEducation.Game.TileMatchingVideoGame"
             Title="Game"
             BackgroundColor="#85AAC5">
    <StackLayout VerticalOptions="FillAndExpand">
        <StackLayout Orientation="Horizontal">
            <Label Text="Score: 0" FontSize="Large" TextColor="Black" VerticalOptions="Start" HorizontalOptions="Start" x:Name="scoreLbl" Margin="20"/>
            <Label Text="" FontSize="Large" TextColor="Gray" VerticalOptions="Start" HorizontalOptions="End" x:Name="lbl" Margin="20"/>
        </StackLayout>
        <Frame BackgroundColor="White" CornerRadius="10" Margin="20" VerticalOptions="Center">
            <Grid x:Name="grid" Margin="10"/>
        </Frame>
        <Button 
            Text="Mute"
            TextColor="Black"
            BackgroundColor="white"
            FontSize="Title"
            BorderColor="Black"
            BorderWidth="2"
            VerticalOptions="End"
            HorizontalOptions="End"
            Clicked="Button_Clicked"
            />
        
    </StackLayout>
</ContentPage>